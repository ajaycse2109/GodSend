<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.oodi.godsendapp.fragment.hospital.ScanAndTestFragment">

    <include
        android:id="@+id/i1"
        layout="@layout/common_header" />
    <EditText
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"
        android:id="@+id/edtSearch"
        android:layout_below="@+id/txtCopy"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:hint="Search for Scans and Tests"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/search_bg_img"/>
   <!-- <EditText
        android:id="@+id/edtSearch"
        android:singleLine="true"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:drawableLeft="@drawable/ic_search"
        android:hint="Search for Scans and Tests"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bg" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recSaT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/loutNotFounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/notfound" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Departments Not Found"
            android:textColor="@color/black" />


    </LinearLayout>


</LinearLayout>
